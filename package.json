  "main": "index.js",
  "types": "./index.d.ts",
  "files": [
    "index.d.ts",
    "index.js"
  ],
  "scripts": {
    "format": "npx prettier --arrow-parens=avoid --trailing-comma=none --print-width=500 --write *.js */**.js",
